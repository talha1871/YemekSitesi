
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model UpdateSocialMediaDto
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="SocialMediaID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="SocialMediaTitle">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="SocialMediaTitle" id="SocialMediaTitle">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="SocialMediaImage">Görseli Giriniz</label>
                                <input type="text" class="form-control" asp-for="SocialMediaImage" id="SocialMediaImage">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="SocialMediaUrl">Görselin Url'ini Giriniz</label>
                                <input type="text" class="form-control" asp-for="SocialMediaUrl" id="SocialMediaUrl">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımda Yazısını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

