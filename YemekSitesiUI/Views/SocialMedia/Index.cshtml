
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}
@model List<ResultSocialMediaDto>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakk. Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakk. İle İlgili İşlemler
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Sosyal Medya ID</th>
									<th scope="col">Sosyal Medya Başlığı</th>
									<th scope="col">Sosyal Medya URL</th>
									<th scope="col">Sosyal Medya Görseli</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>

							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.SocialMediaTitle</td>
										<td>@item.SocialMediaUrl</td>
										<td>@item.SocialMediaImage</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>

						</table>
						<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Hakk Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



