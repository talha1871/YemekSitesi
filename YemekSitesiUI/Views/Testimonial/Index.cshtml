
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}
@model List<ResultTestimonialDto>
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Testimonial İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Testimonial Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Testimonial İle İlgili İşlemler
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Sosyal Medya ID</th>
									<th scope="col">Testimonial Adı</th>
									<th scope="col">Testimonial Başlığı</th>
									<th scope="col">Testimonial Açıklaması</th>
									<th scope="col">Testimonial Görseli</th>
									<th scope="col">Testimonial Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>

							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.TestimonialName</td>
										<td>@item.TestimonialTitle</td>
										<td>@item.TestimonialDescription</td>
										<td>@item.TestimonialImage</td>
										<td>@item.TestimonialStatus</td>
										<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>

						</table>
						<a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">Hakk Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




