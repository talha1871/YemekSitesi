
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model UpdateAboutDto
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="AboutID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="AboutName">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutName" id="AboutName">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="AboutImage">Görselin Url'ini Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutImage" id="AboutImage">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="AboutDescription">Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="AboutDescription" id="AboutDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımda Yazısını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>