@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakk. Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakk. İle İlgili İşlemler
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Hakkımızda ID</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Adı</th>
									@* <th scope="col">Durum</th> *@
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>

							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.AboutDescription</td>
										<td>@item.AboutName</td>
										@* <td>@item.AboutDescription</td> *@
										<td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>

						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Hakk Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

