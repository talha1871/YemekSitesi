
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model CreateDiscountDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İndirim İşlemleri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountName">İndirim Adı</label>
                                <input type="text" class="form-control" asp-for="DiscountName" id="DiscountName">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DescriptionIamge">Görseli Giriniz</label>
                                <input type="text" class="form-control" asp-for="DescriptionIamge" id="DescriptionIamge">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountAmount">İndirim Miktarı</label>
                                <input type="number" class="form-control" asp-for="DiscountAmount" id="DiscountAmount">
                            </div>
                        </div>
                        
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımda Yazısını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



