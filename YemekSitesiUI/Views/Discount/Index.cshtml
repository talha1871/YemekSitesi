
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}
@model List<ResultDiscountDto>
<div class="content">
<div class="container-fluid">
	<h4 class="page-title">Kategori İşlemleri</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Hakk. Listesi</div>
				</div>
				<div class="card-body">
					<div class="card-sub">
						Hakk. İle İlgili İşlemler
					</div>
					<table class="table mt-3">
						<thead>
							<tr>
								<th scope="col">İndirim ID</th>
								<th scope="col">İndirim Adı</th>
								<th scope="col">Açıklama</th>
								<th scope="col">Miktar</th>
								<th scope="col">Açıklama Görseli</th>
								<th scope="col">Durum<th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>

						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@item.DiscountName</td>
									<td>@item.Description</td>
									<td>@item.DiscountAmount</td>
									<td>@item.DescriptionIamge</td>
									<td>@item.Status</td>
									<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
								</tr>
							}
						</tbody>

					</table>
					<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">İndirim Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
