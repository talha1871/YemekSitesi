
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateDiscountDto
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="DiscountID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DescriptionIamge">Görseli Giriniz</label>
                                <input type="text" class="form-control" asp-for="DescriptionIamge" id="DescriptionIamge">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountName">İndirimi Giriniz</label>
                                <input type="text" class="form-control" asp-for="DiscountName" id="DiscountName">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="DiscountAmount">İndiirm Miktarı</label>
                                <input type="number" class="form-control" asp-for="DiscountAmount" id="DiscountAmount">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">İndiirm Açıklaması</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımda Yazısını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

