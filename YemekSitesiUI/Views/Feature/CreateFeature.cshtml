
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model CreateFeatureDto
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Özellik İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Özellik Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FeatureName1">Birinci Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="FeatureName1" id="FeatureName1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FeatureName2">İkinci Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="FeatureName2" id="FeatureName2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FeatureName3">Üçüncü Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="FeatureName3" id="FeatureName3">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description1">Birinci Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description1" id="Description1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description2">İkinci Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description2" id="Description2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description3">Üçüncü Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description3" id="Description3">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Özellik Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

