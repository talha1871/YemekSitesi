
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model YemekSitesiUI.Dtos.ProductDtos.CreateProductDto

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">

			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün İşlemleri</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productname">ÜrünAdı</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname">

							</div>
							<div class="form-group">
								<label for="productprice">Ürün Fiyatı</label>
								<input type="text" class="form-control" asp-for="ProductPrice" id="productprice">

							</div>
							<div class="card-body">
								<div class="form-group">
									<label for="productimage">Ürün Görselini Giriniz</label>
									<input type="text" class="form-control" asp-for="ProductImage" id="productimage">
								</div>
							</div>
							
							<div class="card-body">
								<div class="form-group">
									<label for="productdescription">Ürün Açıklamasını Giriniz</label>
									<input type="text" class="form-control" asp-for="ProductDescription" id="productdescription">
								</div>
							</div>
							<div class="card-action">
								<button class="btn btn-success">Submit</button>

							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>




