
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model UpdateContactDto

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="ContactID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ContactMail">İletişim: E-Mail</label>
                                <input type="email" class="form-control" asp-for="ContactMail" id="ContactMail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FooterDescription">Açıklama</label>
                                <input type="text" asp-for="FooterDescription" id="FooterDescription">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Konum</label>
                                <input type="text" class="form-control" asp-for="Location" id="Location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon</label>
                                <input type="text" class="form-control" asp-for="PhoneNumber" id="PhoneNumber">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

